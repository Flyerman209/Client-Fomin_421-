<Window x:Class="WpfApp25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учет заявок на ремонт" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ввод данных -->
        <StackPanel Grid.Row="0" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Оборудование:"/>
            <TextBox Name="EquipmentTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Тип неисправности:"/>
            <TextBox Name="IssueTypeTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Описание проблемы:"/>
            <TextBox Name="DescriptionTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Клиент:"/>
            <TextBox Name="ClientTextBox" Margin="0,5,0,10"/>

            <Button Name="AddRequestButton" Content="Добавить заявку" 
                    Width="150" Height="30" Click="AddRequestButton_Click" 
                    HorizontalAlignment="Left" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Кнопки снизу -->
        
    </Grid>
</Window>
